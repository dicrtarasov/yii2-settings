{
    "name": "dicr/yii2-settings",
    "type": "yii2-extension",
    "license": "MIT",
    "description": "Компонент Yii2 для хранения настроек приложения",
    "keywords": ["dicr", "yii2", "settings"],
    "homepage": "https://gitlab.com/dicr/yii2-settings",
    "authors": [
        {
            "name": "Igor Tarasov",
            "email": "develop@dicr.org",
            "homepage": "http://dicr.org",
            "role": "developer"
        }
    ],
    "support": {
        "source": "https://gitlab.com/dicr/yii2-settings.git"
    },
    "autoload": {
        "psr-4": {
            "dicr\\settings\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "dicr\\tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "require": {
        "php": "~7.4 || ~8.0.1",
        "yiisoft/yii2": "~2.0"
    },
    "suggest": {
        "ext-yaml": "Needed form YML settings store"
    },
    "require-dev": {
        "ext-sqlite3": "*",
        "ext-yaml": "*",
        "roave/security-advisories": "dev-master",
        "phpunit/phpunit": "~9.5"
    },
    "repositories": [
        {"type": "composer", "url": "https://asset-packagist.org"}
    ]
}
